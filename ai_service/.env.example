# Application Settings
APP_NAME=AI Pipeline
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# Resource Management
MAX_CONCURRENT_GPU_REQUESTS=1
MAX_QUEUE_SIZE=20
REQUEST_TIMEOUT=300
QUEUE_MONITOR_INTERVAL=30

# Model Configuration
MODEL_CACHE_SIZE=8192
CLEANUP_INTERVAL=3600
ENABLE_MODEL_LOADING=false

# Security
SITE_ID=dev-site-001
DATA_RETENTION_HOURS=24

# Performance
ENABLE_QUEUE_METRICS=true
ALERT_QUEUE_SIZE=15
ALERT_MEMORY_USAGE=90

# Paths(Update these paths as needed)
MODELS_PATH=
LOGS_PATH=
TEMP_PATH=

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TASK_DB=1

# Streaming Configuration
ENABLE_STREAMING=true
MAX_STREAMING_SLOTS=2
MAX_BATCH_SLOTS=1
STREAMING_PORT=8300
STREAMING_HOST=0.0.0.0

# Redis Streaming Configuration  
REDIS_STREAMING_DB=2
REDIS_STREAMING_CHANNEL_PREFIX=ai_streaming

# Performance Settings
WHISPER_STREAMING_MODEL=base  # Lighter model for real-time
WHISPER_BATCH_MODEL=large-v3  # Full model for batch processing

ASTERISK_SERVER_IP=your.ip.address

# Asterisk TCP Server Configuration (Whisper Hallucination Fixes)
ENABLE_ASTERISK_TCP=true
ASTERISK_WINDOW_DURATION=15.0          # Audio window duration in seconds (15s optimal for Whisper vs original 5s)
ASTERISK_ENABLE_OVERLAPPING=true       # Enable 25% overlap between windows for better context
ASTERISK_DEBUG_SAVE_AUDIO=true         # Save debug audio chunks for analysis
ASTERISK_ENABLE_VAD=true               # Enable Voice Activity Detection preprocessing
ASTERISK_ENABLE_AUTO_LANGUAGE=false    # Enable automatic language detection (keep false for Swahili)

# Call Data Logging Configuration
ENABLE_CALL_DATA_LOGGING=true          # Enable comprehensive per-call data logging
ENABLE_TCP_PACKET_LOGGING=true         # Log TCP packet details with timing
CALL_LOGS_DIRECTORY=/tmp/ai_service_logs/calls  # Directory for call logs (will be created)

# Live Audio Streaming Configuration
ENABLE_LIVE_AUDIO_STREAMING=true       # Enable real-time audio streaming for monitoring
LIVE_AUDIO_FORMAT=wav                  # Audio format for streaming (wav, mp3, ogg)
LIVE_AUDIO_SAMPLE_RATE=16000           # Sample rate for streamed audio

# Monitoring Dashboard Configuration
ENABLE_MONITORING_DASHBOARD=true       # Enable web-based monitoring dashboard at /monitoring